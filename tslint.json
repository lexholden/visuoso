{
  "rules": {
    "align": [true, "parameters", "statements"],
    "indent": [true, "spaces", 2],
    "import-blacklist": [true, "@/inventory", "jquery"],
    "array-type": [true, "array"],
    "class-name": true,
    "max-line-length": [false, 160],
    "member-ordering": false,
    "no-angle-bracket-type-assertion": true,
    "no-consecutive-blank-lines": true,
    "no-console": true,
    "no-debugger": true,
    "no-duplicate-imports": [true],
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": [true, "ignore-comments", "ignore-template-strings"],
    "no-unused-expression-chai": { "severity": "warning" },
    "origin-ordered-imports": [ true, "any-number-of-blank-lines" ],
    "prefer-const": true,
    "prefer-object-spread": true,
    "quotemark": [true, "single"],
    "semicolon": [true, "never"],
    "space-before-function-paren": [true, "never"],
    "space-within-parens": [true, 0],
    "variable-name": [true, "ban-keywords", "check-format", "allow-snake-case", "allow-leading-underscore"],
    "whitespace": [true, "check-branch", "check-operator", "check-module"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "never"
        },
        "esSpecCompliant": true
      }
    ]
  },
  "rulesDirectory": [
    "tslint-no-unused-expression-chai",
    "codelyzer",
    "node_modules/tslint-origin-ordered-imports-rule/dist"
  ]
}