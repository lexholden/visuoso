{
  "name": "visuoso",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc --outDir dist",
    "build:watch": "tsc -w --outDir dist",
    "lint": "tslint --project ./tsconfig.json",
    "test": "npx jest",
    "test:watch": "npx jest --watchAll"
  },
  "jest": {
    "verbose": false,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 57,
        "branches": 40,
        "functions": 35,
        "lines": 56
      }
    },
    "globals": {
      "ts-test": {
        "tsConfigFile": "./tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "./test"
        }
      ]
    ],
    "setupFiles": [
      "<rootDir>/test/polyfills.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)+(spec).ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.12",
    "dockerode": "^3.0.2",
    "jest": "^24.9.0",
    "jest-image-snapshot": "^2.11.0",
    "jest-junit": "^8.0.0",
    "jsdom": "^15.1.1",
    "jsdom-screenshot": "^3.2.0",
    "jsdom-simulant": "^1.1.2",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "express": "^4.17.1",
    "puppeteer": "^1.20.0"
  }
}
